#Adressen Burkhalter AG
#----------------------
config firewall address
    edit "wildcard.buhonet.ch"
        set type fqdn
        set color 6
        set fqdn "*.buhonet.ch"
    next
    edit "webmail.burkhalter.ch"
        set type fqdn
        set color 6
        set fqdn "webmail.burkhalter.ch"
    next
    edit "burkhalter.beekeeper.io"
        set type fqdn
        set color 6
        set fqdn "burkhalter.beekeeper.io"
    next
    edit "wildcard.duosecurity.com"
        set type fqdn
        set color 6
        set fqdn "*.duosecurity.com"
    next
    edit "wildcard.hooc.me"
        set type fqdn
        set color 6
        set fqdn "*.hooc.me"
    next
end


#Gruppe für Burkhalter AG
#-----------------------------
config firewall addrgrp
    edit "G_ADR_BUBE_BURKHALTER_1.2"
        set member "wildcard.buhonet.ch" "webmail.burkhalter.ch" "burkhalter.beekeeper.io" "wildcard.duosecurity.com" "wildcard.hooc.me"
        set color 6
    next
end

