# HINWEIS: Wird der interne DNS Server der Fortigate verwendet, muss auch in diesen Einstellungen das DNS Filter Profil angegeben werden, ansonsten wird nicht gefiltert,
# Auch wenn der DNS Filter in der Firewall Policy aktiv ist!

# Filter Ausnahmen einf√ºgen

config dnsfilter domain-filter
edit 1
    set name "dns_bube_v1.0"
    config entries
edit 1
    set domain "*.apple.com"
    set type wildcard
    set action allow
next
edit 2
    set domain "*.itunes.apple.com"
    set type wildcard
    set action allow
next
edit 3
    set domain "*.phobos.apple.com"
    set type wildcard
    set action allow
next
edit 4
    set domain "*.apple.com.edgesuite.net"
    set type wildcard
    set action allow
next
edit 5
    set domain "*.windowsupdate.com"
    set type wildcard
    set action allow
next
edit 6
    set domain "*.download.windowsupdate.com"
    set type wildcard
    set action allow
next
edit 7
    set domain "*.stats.update.microsoft.com"
    set type wildcard
    set action allow
next
edit 8
    set domain "*.msftncsi.com"
    set type wildcard
    set action allow
next
edit 9
    set domain "*.microsoft.com"
    set type wildcard
    set action allow
next
edit 11
    set domain "*.hooc.me"
    set type wildcard
    set action allow
next
edit 12
    set domain "*.office.com"
    set type wildcard
    set action allow
next
edit 13
    set domain "*.microsoftonline.com"
    set type wildcard
    set action allow
next
end
next
end

#Filter erstellen

config dnsfilter profile
    edit "dns_bube_v1.0"
        set comment "DNS Filter Burkhalter AG"
        set block-botnet enable
        config domain-filter
            set domain-filter-table 1
        end
        config ftgd-dns
            set options error-allow
            config filters
                edit 1
                    set category 83
                    set action block
                next
                edit 2
                    set category 5
                    set action block
                next
                edit 3
                    set category 1
                next
                edit 4
                    set category 6
